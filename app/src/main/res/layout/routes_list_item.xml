<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="8dp"
    >

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/routes_list_item_tv_price"
        android:layout_alignBottom="@+id/routes_list_item_tv_price"
        android:layout_toEndOf="@+id/routes_list_item_tv_price"
        android:layout_toRightOf="@+id/routes_list_item_tv_price"
        android:text=" грн."/>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/routes_list_item_tv_fromDate"
        android:text="@string/price"/>

    <TextView
        android:id="@+id/routes_list_item_tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_toEndOf="@+id/textView13"
        android:layout_toRightOf="@+id/textView13"
        android:text=""/>

    <TextView
        android:id="@+id/routes_list_item_tv_toDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/routes_list_item_tv_toCity"
        android:text=""/>

    <TextView
        android:id="@+id/routes_list_item_tv_fromCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorPrimaryText"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/routes_list_item_tv_toCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text=""
        android:textColor="@color/colorPrimaryText"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/routes_list_item_tv_fromDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/routes_list_item_tv_toCity"
        android:text=""/>
</RelativeLayout>