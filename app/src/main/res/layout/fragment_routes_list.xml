<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:id="@+id/fragment_routes_list"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_routes_list_tv_no_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:text="@string/no_routes_at_this_period"/>

    <TextView
        android:id="@+id/fragment_routes_list_tv_titile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:paddingLeft="8dp"
        android:text="@string/pathes_in_period"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_routes_list_rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_routes_list_tv_titile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>